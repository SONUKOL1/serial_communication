#include <ArduinoJson.h>

void setup() {
  Serial.begin(115200);
}

void loop() {
  if (Serial.available()) {
    StaticJsonDocument<200> doc;
    DeserializationError err = deserializeJson(doc, Serial);
    if (err) {
      Serial.print(" error:");
      Serial.println(err.c_str());
    }
    serializeJson(doc, Serial);
    Serial.println();
    //  String s=doc["string"];
    //  Serial.print(s);
    // Serial.print(doc["string"].as<char*>());
    // Serial.print(doc["int"].as<int>());
    // Serial.print(doc["float"].as<float>());
    // Serial.print(doc["boolean"].as<bool>());
    // JsonArray array = doc["array"].as<JsonArray>();
    // for (int i = 0; i < array.size(); i++) {
    //  Serial.println(array[i].as<int>());   }
    //  JsonObject object = doc["object"].as<JsonObject>();
    //  for (JsonPair p : object) {
    //     Serial.println(p.key().c_str());
    //     Serial.println(p.value().as<char*>());  }
    // Serial.print(doc["null"].isNull());
    // Serial.print(doc["char"].as<char>());
    // Serial.print(doc["byte"].as<byte>());
    // Serial.println(doc["word"].as<word>());
  }
}
